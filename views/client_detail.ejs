<!DOCTYPE html>
<html>
  <head>
    <title><%= title %> - <%= client_data.name %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('header'); -%>
    <div class="container">
      <h1><%= title %></h1>
      <div class="row">
        <hr />
        <div class="col">
          <p><strong>Name:</strong> <%= client_data.name %></p>
          <p>
            <strong>Location:</strong> <%= client_data.address %>
            &nbsp;&nbsp;&nbsp;&nbsp;<strong>Postal:</strong> <%=
            client_data.postalCode %>
          </p>
          <p>
            <strong>Email:</strong> <%= client_data.email
            %>&nbsp;&nbsp;&nbsp;&nbsp;<strong>Phone:</strong> <%=
            client_data.phone %>
          </p>
          <p></p>
          <p><%= client_data.description %></p>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <% if (client_mechs_data.length > 0){ %>
          <h6>
            List of Mech Part Instances purchased by <%= client_data.name %>
          </h6>
          <br />
          <table class="striped centered">
            <thead>
              <th>Serial No.</th>
              <th>Status</th>
              <th>Mech Part Instance Detail</th>
            </thead>
            <tbody>
              <% for (let mech of client_mechs_data){ %>
              <tr>
                <td><%= mech.serialNo %></td>
                <td>
                  <% if (mech.status === `Available`) { %>
                  <span class="light-green-text text-darken-1"
                    ><%= mech.status %></span
                  >
                  <% } else if (mech.status === `Reserved`) { %>
                  <span class="yellow-text text-darken-2"
                    ><%= mech.status %></span
                  >
                  <% } else { %>
                  <span class="red-text text-darken-1"><%= mech.status %></span>
                  <% } %>
                </td>
                <td><a href="<%= mech.url %>">Link</a></td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <% } else { %>
          <p>Client has not purchased mechs at the shop.</p>
          <% } %>
        </div>
      </div>
    </div>
    <%- include('footer'); -%>
  </body>
</html>
