<!DOCTYPE html>
<html>
  <head>
    <title><%= data.model %>&nbsp;&nbsp;-&nbsp;&nbsp;<%= data.name %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('header'); -%>
    <div class="container">
      <div class="row">
        <h1><%= title %></h1>
        <div class="row">
          <a class="btn waves-effect waves-light" href="delete/<%= data._id %>"
            ><i class="material-icons right">delete</i>Delete</a
          >
          <a class="waves-effect waves-light btn" href="update/<%= data._id %>"
            ><i class="material-icons right">update</i>Update</a
          >
        </div>
        <div class="col s8">
          <h4>Model: <%= data.model %></h4>
          <h4>Name: <%= data.name %></h4>
          <p>Era: <%= data.era %> | Tech: <%= data.tech %></p>
          <p>Class: <%= data.category.name %> | Tonnage: <%= data.weight %></p>
          <p><%= data.description %></p>
          <p>Value: <%= data.price_formatted %> c-bills</p>
          <p>Battle Value: <%= data.battle_value %></p>
          <div class="row">
            <strong class="col s2">Armaments:</strong>
            <ul class="col s2" style="margin-top: unset; padding-left: unset">
              <% for (let equipment of data.equipment){ %> <% if
              (equipment.length > 0){ %>
              <li>- <%= equipment %></li>
              <% } %> <% } %>
            </ul>
          </div>
        </div>
        <div class="col s4">
          <image
            src="<%= data.imageURL %>"
            width="300"
            style="border: 1px solid black; margin-top: 4rem"
            class="right materialboxed valign-wrapper"
          />
        </div>
      </div>
    </div>
    <%- include('footer'); -%>
  </body>
  <script nonce="rAnd0m">
    $(document).ready(function () {
      $(".materialboxed").materialbox();
    });
  </script>
</html>
