<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('header'); -%>
    <div class="container">
      <div class="row s10">
        <h1><%= title %></h1>
        <% if (data.length > 0){ %>
        <table class="centered striped">
          <thead>
            <th>Name</th>
            <th>Manufacturer Details</th>
          </thead>
          <tbody>
            <% for (let manufacturer of data){ %>
            <tr>
              <td><%= manufacturer.name %></td>
              <td><a href="<%= manufacturer.url%>">Link</a></td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% } else { %>
        <p>There are 0 manufacturers supplying the shop.</p>
        <% } %>
      </div>
    </div>
    <%- include('footer'); -%>
  </body>
</html>
